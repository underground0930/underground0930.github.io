{
  "name": "moc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build-css": "node-sass --include-path scss src/scss/style.scss htdocs/css/style.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "build-html": "pug src --hierarchy -o htdocs --pretty",
    "ws": "ws --directory htdocs",
    "dev": "ws --directory htdocs | nodemon -e scss -x \"npm run build-css\" | nodemon -e pug -x \"npm run build-html\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "local-web-server": "^1.2.6",
    "node-sass": "^4.3.0",
    "nodemon": "^1.11.0",
    "pug": "^2.0.0-beta11",
    "pug-cli": "^1.0.0-alpha6"
  }
}
